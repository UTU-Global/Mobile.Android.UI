<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="taxFreeStyle" format="reference" />
    <declare-styleable name="TaxFreeButton">
        <attr name="size" format="string" />
        <attr name="outlined" format="boolean" />
        <attr name="disabled" format="boolean" />
        <attr name="state" format="string" />
    </declare-styleable>

    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_size" format="dimension"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <style name="Base.TaxFreeButton" parent="android:Widget.Button">
        <item name="size">regular</item>
        <item name="outlined">false</item>
        <item name="disabled">false</item>
    </style>

    <style name="TaxFreeButton" parent="Base.TaxFreeButton" />

</resources>